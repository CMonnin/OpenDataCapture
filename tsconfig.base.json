{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": ["@douglasneuroinformatics/tsconfig"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": ["vitest", "vitest/config"]
  },
  "include": ["vitest.config.ts", "vitest.workspace.ts"],
  "exclude": ["docs/*", "**/dist", "**/node_modules", "**/vendor", "vendor/**/*"]
}
