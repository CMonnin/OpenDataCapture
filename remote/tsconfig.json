{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictPropertyInitialization": false,
    "typeRoots": ["./src/typings", "./node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["src/**/*", "test/**/*"]
}
