---

<Page meta={{ title: `${t('platform.title')} - ${t('blog.title')}` }}>
  <h2 class="pb-12 pt-8 text-center text-3xl font-extrabold tracking-tight sm:text-4xl">{t('blog.heading')}</h2>
  <div class="mt-12 grid gap-16 pt-12 lg:grid-cols-3 lg:gap-x-5 lg:gap-y-12">
    {
      allBlogPosts.map((post) => (
        <div>
          <div>
            <a href={post.slug} class="inline-block">
              <span
                class:list={[
                  'inline-flex items-center rounded-full px-3 py-0.5 text-sm font-medium',
                  post.data.type === 'article' && 'bg-indigo-100 text-indigo-800',
                  post.data.type === 'case-study' && 'bg-green-100 text-green-800',
                  post.data.type === 'video' && 'bg-pink-100 text-pink-800'
                ]}
              >
                {post.data.type}
              </span>
            </a>
          </div>
          <a href="#" class="mt-4 block">
            <p class="text-xl font-semibold text-gray-900">{post.data.title}</p>
            <p class="mt-3 text-base text-gray-500">{post.data.description}</p>
          </a>
          <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
              <a href="#">
                <span class="sr-only">{post.data.author}</span>
                <img
                  class="h-10 w-10 rounded-full"
                  src="https://images.unsplash.com/photo-1550525811-e5869dd03032?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"
                  alt=""
                />
              </a>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">
                <a href="#">{post.data.author}</a>
              </p>
              <div class="flex space-x-1 text-sm text-gray-500">
                <time datetime="2020-03-10">{post.data.datePublished.toISOString()}</time>
                <span aria-hidden="true">&middot;</span>
                <span>{post.data.estimatedReadingMinutes} min read</span>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Page>
