---
import { getCollection, getEntry } from 'astro:content';
import { useTranslations } from '@/i18n';
import Page from '@/layouts/Page.astro';

export const getStaticPaths = () => {
  return [{ params: { locale: 'en' } }, { params: { locale: 'fr' } }];
};

const { altLanguage, resolvedLanguage, t } = useTranslations(Astro.url);

const allBlogPosts = await getCollection('blog');

console.log(allBlogPosts);
---

<Page title={`${t('platform.title')} - ${t('blog.title')}`}>
  <div class="text-center pt-16">
    <h1 class="text-3xl tracking-tight font-extrabold sm:text-4xl">{t('blog.heading')}</h1>
    <p class="mt-3 mx-auto max-w-2xl text-xl sm:mt-4">
      {t('blog.subheading')}
    </p>
  </div>
</Page>
