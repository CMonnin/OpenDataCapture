{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^build:lib"],
      "outputs": ["dist/**"]
    },
    "build:lib": {
      "outputs": ["lib/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build:lib"],
      "persistent": true
    },
    "format": {},
    "lint": {
      "dependsOn": ["^build:lib"]
    },
    "test": {
      "dependsOn": ["^build:lib"]
    }
  }
}
