{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "eslint.config.js", "tsconfig.base.json", "prettier.config.js"],
  "globalEnv": ["NODE_ENV", "NODE_OPTIONS"],
  "tasks": {
    "gateway#build": {
      "dependsOn": ["db:push"]
    },
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "env": [
        "API_BASE_URL",
        "CONTACT_EMAIL",
        "DOCS_URL",
        "GITHUB_REPO_URL",
        "LICENSE_URL",
        "GATEWAY_ENABLED",
        "RELEASE_VERSION"
      ],
      "outputs": ["dist/**"]
    },
    "db:generate": {
      "outputs": ["dist/**"]
    },
    "db:push": {
      "cache": false,
      "env": ["GATEWAY_DATABASE_URL"],
      "dependsOn": ["db:generate"]
    },
    "dev": {
      "dependsOn": ["^build", "^db:generate", "db:push"],
      "persistent": true
    },
    "dev:test": {
      "dependsOn": ["^build", "^db:generate", "db:push"],
      "persistent": true
    },
    "format": {},
    "inject": {
      "dependsOn": ["build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^build", "^db:generate", "db:push"]
    },
    "test:e2e": {
      "dependsOn": ["^build", "^db:generate", "db:push"]
    }
  }
}
