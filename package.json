{
  "name": "douglas-data-capture-platform",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "common",
    "server"
  ],
  "license": "AGPL-3.0",
  "scripts": {
    "build": "env-cmd env-cmd -f .env.local  NODE_ENV=production turbo run build",
    "clean": "fd -H -I --prune \".turbo|dist|node_modules\" --exec rm -rf",
    "debug": "env-cmd env-cmd -f .env.local cross-env NODE_ENV=development yarn ws server debug",
    "dev": "env-cmd env-cmd -f .env.local cross-env NODE_ENV=development turbo run dev",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "test": "env-cmd env-cmd -f .env.local turbo run test",
    "ws": "yarn workspace",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.31.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "ts-node": "^10.9.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "zod": "^3.20.2"
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0",
    "npm": ">=9.0.0 <10.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
