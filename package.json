{
  "name": "open-data-capture",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "runtime/*"
  ],
  "scripts": {
    "build": "env-cmd cross-env NODE_ENV=production turbo run build",
    "build:api": "env-cmd cross-env NODE_ENV=production turbo run build --filter=@open-data-capture/api",
    "build:web": "env-cmd cross-env NODE_ENV=production turbo run build --filter=@open-data-capture/web",
    "clean": "find . -type d '(' -name '.turbo' -o -name 'dist' -o -name 'node_modules' ')' -prune -exec rm -rf {} \\;",
    "clean-workflows": "./scripts/clean-workflows.sh",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "dev": "bun dev:core",
    "dev:all": "env-cmd cross-env NODE_ENV=development turbo run dev",
    "dev:core": "env-cmd cross-env NODE_ENV=development bunx turbo run dev --filter=@open-data-capture/api --filter=@open-data-capture/gateway --filter=@open-data-capture/web",
    "force-reinstall": "bun pm cache rm && bun clean && bun install",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "env-cmd turbo run test",
    "ws": "./scripts/workspace.js $@"
  },
  "devDependencies": {
    "@douglasneuroinformatics/eslint-config": "latest",
    "@douglasneuroinformatics/form-types": "latest",
    "@eslint/js": "^8.56.0",
    "@turbo/workspaces": "^1.11.3",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "astro-eslint-parser": "^0.16.1",
    "bun-types": "^1.0.22",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-react": "^7.33.2",
    "globals": "^13.24.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "bun@1.0.14"
}
