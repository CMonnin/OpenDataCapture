{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": ["*"]
    },
    "strictPropertyInitialization": false,
    "typeRoots": ["./src/typings", "./node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["src/**/*"]
}
