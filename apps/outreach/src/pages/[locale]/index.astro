---
import Hero from '@/components/overview/Hero.astro';
import Page from '@/layouts/Page.astro';
import Testimonials from '@/components/overview/Testimonials.astro';

import { useTranslations } from '@/i18n';
import Feature from '@/components/overview/Feature.astro';

const { t } = useTranslations(Astro.url);

export const getStaticPaths = () => {
  return [{ params: { locale: 'en' } }, { params: { locale: 'fr' } }];
};
---

<Page bilingual hasDefaultLocaleRedirect>
  <Hero />
  <Feature
    id="start-session-section"
    description={t('landing.startSession.description')}
    heading={t('landing.startSession.heading')}
    subheading={t('landing.startSession.subheading')}
    screenshot={{ alt: t('landing.startSession.startSessionScreenshot'), name: 'start-session-hash' }}
  />
  <Feature
    reversed
    id="data-management-section"
    description={t('landing.dataManagement.description')}
    heading={t('landing.dataManagement.heading')}
    subheading={t('landing.dataManagement.subheading')}
    screenshot={{ alt: t('landing.dataManagement.dataHubScreenshot'), name: 'data-hub' }}
  />
  <Testimonials />
</Page>
