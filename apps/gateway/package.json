{
  "name": "@open-data-capture/gateway",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && pnpm build:client && pnpm build:server && node scripts/build.js",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:main": "esbuild --bundle --format=esm --outfile=dist/main.js  --platform=node --external:lightningcss src/main.ts",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "dev": "NODE_ENV=development env-cmd -f ../../.env tsx src/main.ts",
    "format": "prettier --write src",
    "lint": "tsc && eslint --fix src",
    "start": "NODE_ENV=production GATEWAY_PROD_SERVER_PORT=$GATEWAY_DEV_SERVER_PORT env-cmd -f ../../.env node dist/main.mjs",
    "test": "env-cmd -f ../../.env --use-shell 'start-server-and-test --expect 404 \"pnpm dev\" \"http://localhost:${GATEWAY_DEV_SERVER_PORT}\" cy:run'",
    "test:dev": "env-cmd -f ../../.env --use-shell 'start-server-and-test --expect 404 \"pnpm dev\" \"http://localhost:${GATEWAY_DEV_SERVER_PORT}\" cy:open'"
  },
  "dependencies": {
    "@douglasneuroinformatics/crypto": "latest",
    "@douglasneuroinformatics/ui": "^6.0.1",
    "@open-data-capture/common": "workspace:*",
    "@open-data-capture/database": "workspace:*",
    "@open-data-capture/i18next": "workspace:*",
    "@open-data-capture/instrument-renderer": "workspace:*",
    "@open-data-capture/react-core": "workspace:*",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "i18next": "^23.10.0",
    "lodash": "^4.17.21",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "sirv": "^2.0.4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@open-data-capture/esbuild-plugin-native-modules": "workspace:*",
    "@open-data-capture/esbuild-plugin-prisma": "workspace:*",
    "@open-data-capture/tailwindcss": "workspace:*",
    "@open-data-capture/vite-plugin-runtime": "workspace:*",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.60",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4"
  },
  "trustedDependencies": [
    "sqlite3"
  ]
}
