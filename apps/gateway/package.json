{
  "name": "@open-data-capture/gateway",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && bun build:client && bun build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "dev": "env-cmd -f ../../.env cross-env NODE_ENV=development tsx server.ts",
    "format": "prettier --write src",
    "lint": "tsc && eslint --fix src",
    "preview": "env-cmd -f ../../.env cross-env NODE_ENV=production tsx server.ts"
  },
  "dependencies": {
    "@douglasneuroinformatics/crypto": "latest",
    "@douglasneuroinformatics/ui": "latest",
    "@open-data-capture/common": "workspace:*",
    "@open-data-capture/database": "workspace:*",
    "@open-data-capture/i18next": "workspace:*",
    "@open-data-capture/instrument-renderer": "workspace:*",
    "@open-data-capture/react-core": "workspace:*",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@open-data-capture/vite-plugin-runtime": "workspace:*",
    "@open-data-capture/vite-plugin-tailwind": "workspace:*",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "vite": "^5.0.12"
  },
  "trustedDependencies": [
    "sqlite3"
  ]
}