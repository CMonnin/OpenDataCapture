{
  "name": "@open-data-capture/playground",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "build": "tsc && bunx vite build",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "dev": "env-cmd -f ../../.env cross-env NODE_ENV=development bunx --bun vite",
    "format": "prettier --write src",
    "lint": "tsc && eslint --fix src",
    "storybook": "env-cmd -f ../../.env storybook dev -p 6006",
    "test": "env-cmd -f ../../.env --use-shell 'start-server-and-test \"bunx vite --mode test\" \"http://localhost:${PLAYGROUND_DEV_SERVER_PORT}\" cy:run'",
    "test:dev": "env-cmd -f ../../.env --use-shell 'start-server-and-test \"bunx vite --mode test\" \"http://localhost:${PLAYGROUND_DEV_SERVER_PORT}\" cy:open'"
  },
  "dependencies": {
    "@douglasneuroinformatics/ui": "latest",
    "@douglasneuroinformatics/utils": "latest",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@open-data-capture/common": "workspace:*",
    "@open-data-capture/demo": "workspace:*",
    "@open-data-capture/editor": "workspace:*",
    "@open-data-capture/i18next": "workspace:*",
    "@open-data-capture/instrument-library": "workspace:*",
    "@open-data-capture/instrument-renderer": "workspace:*",
    "@open-data-capture/instrument-transformer": "workspace:*",
    "@open-data-capture/react-core": "workspace:*",
    "@open-data-capture/runtime-v0.0.1": "workspace:*",
    "axios": "^1.6.5",
    "framer-motion": "^10.18.0",
    "i18next": "^23.7.16",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.21.1",
    "stacktrace-parser": "^0.1.10",
    "ts-pattern": "^5.0.6",
    "zod": "^3.22.4",
    "zod-validation-error": "^2.1.0"
  },
  "devDependencies": {
    "@open-data-capture/tailwindcss": "workspace:*",
    "@open-data-capture/vite-plugin-runtime": "workspace:*",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12"
  }
