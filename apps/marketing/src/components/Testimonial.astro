---
import { Image } from 'astro:assets';
import { cn } from '@douglasneuroinformatics/ui';

type Props = {
  format: 'short' | 'long';
  image: ImageMetadata;
  quote: string;
  fullName: string;
  suffix?: string;
  position: string;
};
---

<div
  class={cn(
    'h-full p-8 text-center lg:p-0 flex flex-col justify-between w-full',
    Astro.props.format === 'long' && 'lg:col-span-2 lg:max-w-3xl lg:mx-auto'
  )}
>
  <div>
    <Image
      alt="headshot"
      class="mb-8 inline-block h-24 w-24 rounded-full border-2 border-slate-300 bg-slate-100 object-cover object-center"
      src={Astro.props.image}
    />
    <p class="leading-relaxed" style="text-wrap: balance;">{Astro.props.quote}</p>
  </div>
  <div>
    <span class="mb-4 mt-6 inline-block h-1 w-10 rounded bg-sky-700"></span>
    <h2
      class="title-font overflow-hidden text-ellipsis whitespace-nowrap text-lg font-medium tracking-wider text-slate-900 dark:text-slate-100"
    >
      {`${Astro.props.fullName}${Astro.props.suffix ? `, ${Astro.props.suffix}` : ''}`}
    </h2>
    <p class="overflow-hidden text-ellipsis whitespace-nowrap text-slate-700 dark:text-slate-300">
      {Astro.props.position}
    </p>
  </div>
</div>
