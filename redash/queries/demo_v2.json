{
  "collection": "instrumentrecords",
  "aggregate": [
    {
      "$lookup": {
        "from": "subjects",
        "localField": "subject",
        "foreignField": "_id",
        "as": "subject"
      }
    },
    {
      "$unwind": "$subject"
    },
    {
      "$addFields": {
        "sex": "$subject.sex",
        "totalScore": {
          "$sum": {
            "$map": {
              "input": {
                "$objectToArray": "$data"
              },
              "as": "field",
              "in": "$$field.v"
            }
          }
        }
      }
    },
    {
      "$group": {
        "_id": "$dateCollected",
        "meanTotalScore": {
          "$avg": "$totalScore"
        },
        "stdTotalScore": {
          "$stdDevSamp": "$totalScore"
        },
        "meanTotalScoremale": {
          "$avg": {
            "$cond": [
              {
                "$eq": ["$sex", "male"]
              },
              "$totalScore",
              null
            ]
          }
        },
        "meanTotalScorefemale": {
          "$avg": {
            "$cond": [
              {
                "$eq": ["$sex", "female"]
              },
              "$totalScore",
              null
            ]
          }
        }
      }
    }
  ]
}
