{
  "name": "@open-data-capture/instrument-library",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./src/typings/index.d.ts"
    },
    "./forms/*.js": {
      "import": "./src/forms/*.js",
      "types": "./src/typings/forms.d.ts"
    },
    "./interactive/*.jsx": {
      "import": "./src/interactive/*.jsx",
      "types": "./src/typings/interactive.d.ts"
    }
  },
  "scripts": {
    "build:lib": "rm -rf lib && bunx --bun rollup -c",
    "dev": "rm -rf lib && bunx --bun rollup -c --watch",
    "format": "prettier --write src",
    "lint": "tsc && eslint --fix src"
  },
  "dependencies": {
    "@open-data-capture/instrument-transformer": "workspace:*"
  },
  "devDependencies": {
    "@open-data-capture/rollup-plugin-instrument": "workspace:*",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.9.4"
  }
}
