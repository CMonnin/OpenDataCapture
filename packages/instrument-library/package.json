{
  "name": "@opendatacapture/instrument-library",
  "type": "module",
  "version": "0.0.0",
  "license": "AGPL-3.0",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./dist/index.js"
    },
    "./forms/*": "./src/forms/*",
    "./interactive/*": "./src/interactive/*"
  },
  "scripts": {
    "build": "rm -rf dist && NODE_OPTIONS='--import tsx/esm' pnpm exec rollup -c",
    "dev": "rm -rf dist && NODE_OPTIONS='--import tsx/esm' pnpm exec rollup -c --watch",
    "format": "prettier --write src",
    "lint": "tsc && eslint --fix src"
  },
  "dependencies": {
    "@opendatacapture/instrument-transformer": "workspace:*",
    "@opendatacapture/runtime-v1": "workspace:*"
  },
  "devDependencies": {
    "@opendatacapture/rollup-plugin-instrument": "workspace:*",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.13.0"
  }
}
